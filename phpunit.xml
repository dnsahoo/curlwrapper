<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
    bootstrap="autoload.php"
    backupGlobals="true"
    backupStaticAttributes="true"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="false"
    verbose="true"
    syntaxCheck="true">
    <testsuites>
        <testsuite name="Main">
            <directory>./test</directory>
        </testsuite>
    </testsuites>
</phpunit>
